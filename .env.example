# ============================================
# BD DELTAWASH (actual - mantener sin cambios)
# ============================================
# Esta es la conexión a la BD operativa de DeltaWash
POSTGRES_URL="postgresql://user:password@host/database"
POSTGRES_PRISMA_URL="postgresql://user:password@host/database?pgbouncer=true"
POSTGRES_URL_NO_SSL="postgresql://user:password@host/database"
POSTGRES_URL_NON_POOLING="postgresql://user:password@host/database"
POSTGRES_USER="user"
POSTGRES_HOST="host"
POSTGRES_PASSWORD="password"
POSTGRES_DATABASE="database"

# ============================================
# BD CENTRAL (nueva - para gestión SaaS)
# ============================================
# Connection string del branch "central" creado en Neon
# Este branch contiene: empresas, usuarios_sistema, actividad_sistema, etc.
CENTRAL_DB_URL="postgresql://user:password@host/central_database"

# ============================================
# NEON API (para crear branches automáticamente)
# ============================================
# API Key de Neon (obtener en: https://console.neon.tech/app/settings/api-keys)
NEON_API_KEY="tu_api_key_aqui"

# Project ID de Neon (obtener en: https://console.neon.tech/app/projects)
# Ejemplo: "ancient-forest-12345678"
NEON_PROJECT_ID="tu_project_id_aqui"

# ============================================
# JWT para sesiones (clave aleatoria generada)
# ============================================
# Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="cambiar_por_una_clave_aleatoria_segura"

# ============================================
# URL de la aplicación (para emails y encuestas)
# ============================================
# Producción: https://lavapp.ar
# Desarrollo: http://localhost:3000
NEXT_PUBLIC_APP_URL="https://lavapp.ar"

# ============================================
# Resend API (para envío de emails)
# ============================================
# API Key de Resend (obtener en: https://resend.com/api-keys)
RESEND_API_KEY="tu_resend_api_key_aqui"

# ============================================
# Vercel Cron (para tareas programadas)
# ============================================
# Secret para proteger los endpoints de cron jobs
# Generar con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CRON_SECRET="cambiar_por_una_clave_aleatoria_segura"
